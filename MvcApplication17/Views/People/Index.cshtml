@using MvcApplication17.Controllers
@model MvcApplication17.Models.PeopleViewModel

<a href="/people/new" class="btn btn-primary">Add New Person</a>
<table class="table table-hover table-striped table-bordered">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Edit</th>
    </tr>
    @foreach (Person person in Model.People)
    {
        <tr>
            <td>@person.FirstName</td>
            <td>@person.LastName</td>
            <td>@person.Age</td>
            <td><a href="/people/edit/@person.Id" class="btn btn-danger">Edit</a></td>
        </tr>   
    }
</table>